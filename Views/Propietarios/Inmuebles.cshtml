@model IEnumerable<InmobiliariaGrosso.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles de Inquilino";
    Propietario p = (Propietario)ViewBag.Propietario;
}

@if (TempData["msg"] != null)
{
    <div class="row">
        <div class="col-sm-5">
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <span>@TempData["msg"]</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                </button>
            </div>
        </div>
    </div>
}

<h1>Inmuebles de <a asp-action="Details" asp-controller="Propietarios" asp-route-id="@p.Id">@p.Nombre</a></h1>

<hr />
<table class="table" id="table_id">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uso)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Ambientes)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Superficie) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPropietario)
            </th>
            <th>
                Disponible
            </th>
            <th></th>
        </tr>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <th>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.Uso)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ambientes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Superficie) m2
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Latitud)º
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Longitud)º
                    </td>
                    <td>
                        @(item.Duenio.Nombre + " " + item.Duenio.Apellido)
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-controller="Inmuebles" asp-route-id="@item.Id">Editar</a> 
                        <a class="btn btn-warning" asp-action="Details" asp-controller="Inmuebles" asp-route-id="@item.Id">Detalles</a>
                        <a class="btn btn-warning" asp-action="Delete" asp-controller="Inmuebles" asp-route-id="@item.Id">Borrar</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_DataTable");}
}