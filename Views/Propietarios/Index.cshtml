@model IEnumerable<InmobiliariaGrosso.Models.Propietario>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["msg"] != null)
{
    <div class="row">
        <div class="col-sm-5">
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <span>@TempData["msg"]</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                </button>
            </div>
        </div>
    </div>
}

<h1>Propietarios</h1>

<p>
    <a class="btn btn-secondary" asp-action="Create"><i class="far fa-plus-square"></i>Crear Propietarios</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                 <a class="btn btn-warning" asp-action="Edit" asp-controller="Propietarios" asp-route-id="@item.Id">Editar</a> 
                 <a class="btn btn-warning" asp-action="Details" asp-controller="Propietarios" asp-route-id="@item.Id">Detalles</a>
                 <a class="btn btn-warning" asp-action="Delete" asp-controller="Propietarios" asp-route-id="@item.Id">Borrar</a>
                 <a class="btn btn-warning" asp-action="Inmuebles" asp-controller="Propietarios" asp-route-id="@item.Id">Inmuebles</a>
            
            </td>
        </tr>
}
    </tbody>
</table>
